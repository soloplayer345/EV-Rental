@page
@model EV_Rental.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Đăng nhập</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="LoginRequest.EmailOrPhone" class="form-label"></label>
                            <input asp-for="LoginRequest.EmailOrPhone" class="form-control" placeholder="Nhập email hoặc số điện thoại" />
                            <span asp-validation-for="LoginRequest.EmailOrPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LoginRequest.Password" class="form-label"></label>
                            <input asp-for="LoginRequest.Password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="LoginRequest.RememberMe" class="form-check-input" />
                            <label asp-for="LoginRequest.RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                        </div>

                        <div class="text-center mt-3">
                            <p>Chưa có tài khoản? <a asp-page="/Account/Register">Đăng ký ngay</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
