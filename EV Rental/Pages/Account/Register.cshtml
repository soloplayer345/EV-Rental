@page
@model EV_Rental.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Đăng ký tài khoản</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="RegisterRequest.FullName" class="form-label"></label>
                                <input asp-for="RegisterRequest.FullName" class="form-control" placeholder="Nhập họ và tên" />
                                <span asp-validation-for="RegisterRequest.FullName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.Email" class="form-label"></label>
                                <input asp-for="RegisterRequest.Email" class="form-control" placeholder="example@email.com" />
                                <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.Phone" class="form-label"></label>
                                <input asp-for="RegisterRequest.Phone" class="form-control" placeholder="0123456789" />
                                <span asp-validation-for="RegisterRequest.Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.Password" class="form-label"></label>
                                <input asp-for="RegisterRequest.Password" class="form-control" placeholder="Tối thiểu 6 ký tự" />
                                <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="RegisterRequest.ConfirmPassword" class="form-label"></label>
                                <input asp-for="RegisterRequest.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="RegisterRequest.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Đăng ký</button>
                        </div>

                        <div class="text-center mt-3">
                            <p>Đã có tài khoản? <a asp-page="/Account/Login">Đăng nhập ngay</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- OTP Modal -->
<div class="modal fade" id="otpModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác thực OTP</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Chúng tôi đã gửi mã 6 số đến email của bạn. Vui lòng nhập để xác nhận.</p>
                <form method="post" asp-page-handler="VerifyOtp">
                    <div class="mb-3">
                        <input name="otp" class="form-control" maxlength="6" placeholder="Nhập mã 6 số" />
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                        <button formaction="?handler=ResendOtp" formmethod="post" class="btn btn-link">Gửi lại mã</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            var show = '@(TempData["ShowOtpModal"] as string)';
            if (show === 'true') {
                var modal = new bootstrap.Modal(document.getElementById('otpModal'));
                modal.show();
            }
        })();
    </script>
}
