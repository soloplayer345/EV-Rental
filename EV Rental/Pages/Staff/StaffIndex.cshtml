@page
@model StaffIndexModel
@{
    ViewData["Title"] = "Quản lý xe điện - Nhân viên";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Quản lý xe điện</h2>
        <a asp-page="/Vehicles/Create" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Thêm xe mới
        </a>
    </div>

    <!-- Thanh tìm kiếm -->
    <form method="get" class="mb-4">
        <div class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Tên xe</label>
                <input type="text" name="Search.Name" value="@Model.Search.Name" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Hãng</label>
                <input type="text" name="Search.Brand" value="@Model.Search.Brand" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Loại xe</label>
                <input type="text" name="Search.VehicleType" value="@Model.Search.VehicleType" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Trạng thái</label>
                <select name="Search.Status" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @foreach (var s in Enum.GetValues(typeof(DataAccessLayer.Enums.VehicleStatus)))
                    {
                        <option value="@s"
                                selected="@(Model.Search.Status.HasValue && Model.Search.Status.Value == (DataAccessLayer.Enums.VehicleStatus)s)">
                            @s
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-1 text-end">
                <button type="submit" class="btn btn-primary w-100">Tìm</button>
            </div>
        </div>
    </form>

    <!-- Danh sách xe -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (Model.Vehicles != null && Model.Vehicles.Any())
        {
            @foreach (var v in Model.Vehicles)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@v.ImageUrl" class="card-img-top" alt="@v.Name" style="height:200px; object-fit:cover;" />
                        <div class="card-body text-start">
                            <h5 class="card-title">@v.Name</h5>
                            <p class="card-text mb-1"><strong>Hãng:</strong> @v.Brand</p>
                            <p class="card-text mb-1"><strong>Model:</strong> @v.Model</p>
                            <p class="card-text mb-1"><strong>Giá/giờ:</strong> @v.PricePerHour.ToString("N0") VNĐ</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-center">
                            <a asp-page="/Vehicles/Edit" asp-route-id="@v.Id" class="btn btn-outline-primary btn-sm me-2">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-page="/Vehicles/Delete" asp-route-id="@v.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <p class="text-muted">Không có xe nào phù hợp với tiêu chí tìm kiếm.</p>
            </div>
        }
    </div>
</div>
