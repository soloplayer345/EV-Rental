@page "{id:int}"
@model DeleteVehicleModel
@{
    ViewData["Title"] = "Xóa Xe Điện";
}

<h2 class="text-danger mb-4">Xóa Xe Điện</h2>

<div class="card p-4 shadow-sm">
    <h4>Bạn có chắc muốn xóa xe này?</h4>

    <div class="mt-3">
        <strong>Tên xe:</strong> @Model.Vehicle.Name <br />
        <strong>Hãng:</strong> @Model.Vehicle.Brand <br />
        <strong>Loại:</strong> @Model.Vehicle.VehicleType <br />
        <img src="@Model.Vehicle.ImageUrl" width="200" class="rounded mt-2" />
    </div>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Vehicle.Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Hủy</a>
    </form>
</div>
